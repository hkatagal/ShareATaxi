<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.harishkumar.uimaterialtest.FragmentRequest">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <ImageView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_calendar" />

        <EditText
            android:id="@+id/select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/date"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/date"
            android:focusable="false"
            android:text="Select Date"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/date"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/select_date"
            android:src="@drawable/ic_clock" />

        <EditText
            android:id="@+id/select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/date"

            android:layout_toRightOf="@+id/time"
            android:focusable="false"
            android:text="Select Time"
            android:textAllCaps="false" />


        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:text="From"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_map_marker" />

        <EditText
            android:id="@+id/FromAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/marker"
            android:hint="Address" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/FromAddress"
            android:layout_below="@+id/FromAddress"
            android:layout_marginTop="10dp"
            android:hint="Enter City" />

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/FromAddress"
            android:layout_below="@+id/city"
            android:layout_marginTop="10dp"
            android:hint="Enter State" />


        <EditText
            android:id="@+id/zip_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/FromAddress"
            android:layout_below="@+id/state"
            android:layout_marginTop="10dp"
            android:hint="Zip Code" />

        <TextView
            android:id="@+id/dest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zip_code"
            android:layout_marginTop="20dp"
            android:text="Destination"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/marker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dest"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_map_marker"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/DestAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dest"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/marker1"
            android:hint="Address" />

        <EditText
            android:id="@+id/destcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/DestAddress"
            android:layout_below="@+id/DestAddress"
            android:layout_marginTop="10dp"
            android:hint="Enter City" />

        <EditText
            android:id="@+id/deststate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/DestAddress"
            android:layout_below="@+id/destcity"
            android:layout_marginTop="10dp"
            android:hint="Enter State" />


        <EditText
            android:id="@+id/destzip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/DestAddress"
            android:layout_below="@+id/deststate"
            android:layout_marginTop="10dp"
            android:hint="Zip Code" />

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_below="@+id/destzip"
            android:layout_alignLeft="@+id/destzip"/>
        <Button
            android:id="@+id/resetbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/time"
            android:layout_toEndOf="@+id/time" />

    </RelativeLayout>
</ScrollView>